3. Documentation Service
    
4. Tracking Service

Exceptions
==========

1. S2aApiException(Exception):
    def __init__(self, msg):
        Exception.__init__(self, msg)
        
2. S2aApiHttpException(S2aApiException):
    def __init__(self, msg, code):
        self.code = code
        S2aApiException.__init__(self, msg)
    def __str__(self):
        return "%s: %s" % (self.code, self.message)

3. ServerException(S2aApiHttpException):
    """500"""
    def __init__(self, msg):
        S2aApiHttpException.__init__(self, msg, 500)

4. RequestException(S2aApiHttpException):
    """400; 405"""
    def __init__(self, msg, code):
        S2aApiHttpException.__init__(self, msg, code)

5. AccessException(S2aApiHttpException):
    """403"""
    def __init__(self, msg):
        S2aApiHttpException.__init__(self, msg, 403)

6. NotFoundException(S2aApiHttpException):
    """404"""
    def __init__(self, msg):
        S2aApiHttpException.__init__(self, msg, 404)

7. ServiceLogicException(S2aApiHttpException):
    """412"""
    def __init__(self, msg):
        S2aApiHttpException.__init__(self, msg, 412)


